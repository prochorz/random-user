{
  "plugins": [
    "stylelint-scss",
    "stylelint-order",
    "stylelint-declaration-use-variable",
    "stylelint-declaration-block-no-ignored-properties",
    "stylelint-high-performance-animation"
  ],
  "extends": "stylelint-config-recommended-scss",
  "rules": {
    "indentation": 2,
    "unit-case": "lower",
    "block-no-empty": true,
    "property-case": "lower",
    "string-quotes": "double",
    "no-extra-semicolons": true,
    "color-no-invalid-hex": true,
    "value-keyword-case": "lower",
    "no-duplicate-selectors": true,
    "property-no-vendor-prefix": true,
    "no-duplicate-at-import-rules": true,
    "block-opening-brace-space-before": "always",
    "selector-list-comma-newline-after": "always",
    "block-closing-brace-newline-after": "always",
    "block-closing-brace-newline-before": "always",
    "block-closing-brace-empty-line-before": "never",
    "declaration-block-no-duplicate-properties": true,
    "declaration-block-single-line-max-declarations": 1,
    "value-list-comma-space-after": "always-single-line",
    "selector-list-comma-space-after": always-single-line,
    "declaration-block-semicolon-space-after": "always-single-line",
    "declaration-block-trailing-semicolon": "always",
    "comment-empty-line-before": [ "always", {
      "ignore": ["stylelint-commands", "after-comment"]
    } ],
    "declaration-colon-space-before": "never",
    "declaration-colon-space-after": "always",
    "no-descending-specificity": null,
    "rule-empty-line-before": [ "always", {
      "except": ["first-nested"],
      "ignore": ["after-comment"]
    } ],
    "max-nesting-depth": [6, {
      "ignore": ["pseudo-classes", "blockless-at-rules"]
    }],
    "scss/dollar-variable-colon-space-after": "always",
    "unit-allowed-list": ["px", "%", "vh", "vw", "deg", "s", "ms", "fr", "rem"],
    "selector-class-pattern": "^(?:(?:o|c|u|t|s|is|has|_|js|qa)-)?[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*(?:__[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:--[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:\\[.+\\])?$",
    "order/properties-order": [
      "content",
      "position",
      "top",
      "right",
      "bottom",
      "left",
      "z-index",
      "float",
      "display",
      "flex",
      "flex-direction",
      "justify-content",
      "align-items",
      "flex-basis",
      "flex-order",
      "flex-grow",
      "flex-shrink",
      "order",
      "visibility",

      "width",
      "min-width",
      "max-width",
      "height",
      "min-height",
      "max-height",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "border",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "border-radius",
      "border-box",
      "outline",
      "box-sizing",
      "background",
      "background-color",
      "box-shadow",

      "font",
      "font-weight",
      "line-height",
      "white-space",
      "break-word",
      "letter-spacing",
      "color",
      "text-align",
      "transform",
      "transition",
      "will-change",
      "overflow",
      "opacity",
      "user-select"
    ],
    "order/order": [
      "declarations",
      {
        "type": "at-rule",
        "name": "media"
      },
      {
        "type": "rule",
        "selector": "^&::(before|after)"
      },
      {
        "type": "rule",
        "selector": "^&:\\w"
      },
      {
        "type": "rule",
        "selector": "^&_"
      },
      {
        "type": "rule",
        "selector": "^."
      }
    ],
    "sh-waqar/declaration-use-variable": [["fill", { "ignoreValues": ["transparent", "inherit", "none", "/regexForspecialFunc/", "/^darken/", "/^rgba/"] }]],
    "plugin/declaration-block-no-ignored-properties": true,
    "plugin/no-low-performance-animation-properties": [true, { "ignoreProperties": ["height", "position", "background-position", "box-shadow", "background-color"] }]
  }
}
